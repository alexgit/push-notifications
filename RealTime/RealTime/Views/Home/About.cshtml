@{
    ViewBag.Title = "About";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Some page here</h2>
</hgroup>

<div id="things-container">
    <div data-bind="template: { name: 'thing-template', foreach: things }"></div>
</div>

<aside>
    <h3>Aside Title</h3>
    <p>
        Fusce facilisis ullamcorper consequat. Vestibulum non sapien lectus. Nam 
        mi augue, posuere at tempus vel, dignissim vitae nulla.
    </p>
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>
</aside>

<script id="thing-template" type="text/html">
    <div>
        <input type="hidden" data-bind="attr: { value: Id }" />
        Title: ${Title} <br/>
        Time: ${Time} <br/>
        <p>
            Content: ${Content} <br/>
        </p>
        <button data-bind="click: $parent.handle">Handle</button>
    </div>
</script>